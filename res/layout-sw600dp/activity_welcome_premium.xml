<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1abc9c"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/welcome_premium_ok_btn"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_light"
        android:text="@string/welcome_premium_takeme"
        android:textColor="#1abc9c" />

    <TextView
        android:id="@+id/welcome_premium_expire_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/welcome_premium_ok_btn"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="87dp"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="27-07-2015"
        android:textColor="#FFFFFF"
        android:textSize="90sp" />

    <TextView
        android:id="@+id/welcome_premium_expire_notify_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/welcome_premium_expire_txt"
        android:layout_alignParentLeft="true"
        android:gravity="center_horizontal"
        android:text="Your account will be expire on"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/welcome_premium_thanks_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/scrollView1"
        android:layout_marginTop="100dp"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="Thank you!"
        android:textColor="#FFFFFF"
        android:textSize="110sp" />

    <TextView
        android:id="@+id/welcome_premium_thanks_1_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/welcome_premium_thanks_txt"
        android:layout_marginTop="140dp"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="@string/welcome_premium_acknowledge"
        android:textColor="#FFFFFF"
        android:textSize="55sp" />

</RelativeLayout>